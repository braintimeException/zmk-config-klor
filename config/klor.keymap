/ {
    behaviors {
        hm: homerow_mods {
            compatible = "zmk,behavior-hold-tap";
            label = "HOMEROW_MODS";
            #binding-cells = <2>;
            tapping-term-ms = <150>;
            quick_tap_ms = <0>;
            flavor = "tap-preferred";
            bindings = <&kp>, <&kp>;
        };

    };

     combos {
            compatible = "zmk,combos";
            /* combo_esc { */
            /*     timeout-ms = <50>; */
            /*     key-positions = <0 1>; */
            /*     bindings = <&kp ESC>; */
            /* }; */
            combo_lshift {
              timeout-ms = <70>;
              key-positions = <23 24>;
              bindings = <&kp LSHFT>;
            };
            combo_rshift {
              timeout-ms = <70>;
              key-positions = <33 34>;
              bindings = <&kp RSHFT>;
            };
            combo_lcontrol {
              timeout-ms = <70>;
              key-positions = <24 25>;
              bindings = <&kp LCTRL>;
            };
            combo_rcontrol {
              timeout-ms = <70>;
              key-positions = <32 33>;
              bindings = <&kp RCTRL>;
            };
            combo_lalt {
              timeout-ms = <50>;
              key-positions = <25 26>;
              bindings = <&kp LALT>;
            };
            combo_ralt {
              timeout-ms = <50>;
              key-positions = <29 30>;
              bindings = <&kp RALT>;
            };
            combo_lshift_lctl {
              timeout-ms = <50>;
              key-positions = <23 24 25>;
              bindings = <&kp LS(LCTRL)>;
            };
            combo_rshift_lctl {
              timeout-ms = <50>;
              key-positions = <32 33 34>;
              bindings = <&kp RS(RCTL)>;
            };
            combo_lshift_lalt {
              timeout-ms = <50>;
              key-positions = <23 24 26>;
              bindings = <&kp LS(LALT)>;
            };
            combo_rshift_lalt {
              timeout-ms = <50>;
              key-positions = <31 33 34>;
              bindings = <&kp RS(RALT)>;
            };
            combo_lctl_lalt {
              timeout-ms = <50>;
              key-positions = <24 25 26>;
              bindings = <&kp LC(LALT)>;
            };
            combo_rctl_lalt {
              timeout-ms = <50>;
              key-positions = <31 32 33>;
              bindings = <&kp RC(RALT)>;
            };
            combo_lshift_lctl_lalt {
              timeout-ms = <50>;
              key-positions = <23 24 25 26>;
              bindings = <&kp LS(LC(LALT))>;
            };
            combo_rshift_rctl_lalt {
              timeout-ms = <50>;
              key-positions = <31 32 33 34>;
              bindings = <&kp LS(RC(RALT))>;
            };
    };



        keymap {
                compatible = "zmk,keymap";
// ▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄


                prorak_layer {
// ┌───────────────────────────────────────────────────────────┐
label= "PRORAK"                                                ;
// └───────────────────────────────────────────────────────────┘
/*            ┌─────────┬─────────┬─────────┬─────────┬─────────┐                    ┌─────────┬─────────┬─────────┬─────────┬─────────┐
              │    ;    │    ,    │    .    │    P    │    Y    │                    │    F    │    G    │    C    │    R    │    L    │   
    ┌─────────┼─────────┼─────────┼─────────┼─────────┼─────────┤                    ├─────────┼─────────┼─────────┼─────────┼─────────┼─────────┐
    │   XXX   │    A    │    O    │    E    │    U    │    I    │                    │    D    │    H    │    T    │    N    │    S    │   XXX   │
    ├─────────┼─────────┼─────────┼─────────┼─────────┼─────────┤╭────────╮╭────────╮├─────────┼─────────┼─────────┼─────────┼─────────┼─────────┤
    │   XXX   │    "    │    Q    │    J    │    K    │    X    ││  MUTE  ││PLY/PSE ││    B    │    M    │    W    │    V    │    Z    │   XXX   │
    └─────────┴─────────┴─────────┼─────────┼─────────┼─────────┼╰────────╯╰────────╯┼─────────┼─────────┼─────────┼─────────┴─────────┴─────────┘
                                  │  LGUI   │  SPACE  │  FNUM   │   ALT   ││  ENTER  │  NAVIG  │  BSPCE  │  RGUI   │  
                                  └─────────┴─────────┴─────────┴─────────┘└─────────┴─────────┴─────────┴─────────┘ */ 
 bindings = <
 //|          ╷         ╷         ╷         ╷         ╷         ╷         ╷╷         ╷         ╷         ╷         ╷         ╷         ╷
              &kp SEMI  &kp COMMA &kp DOT   &kp P     &kp Y                          &kp F     &kp G     &kp C     &kp R     &kp L
    &trans    &kp A     &kp O     &kp E     &kp U     &kp I                          &kp D     &kp H     &kp T     &kp N     &kp S      &trans
    &trans    &kp SQT   &kp Q     &kp J     &kp K     &kp X     &trans     &trans    &kp B     &kp M     &kp W     &kp V     &kp Z      &trans
                                            &kp LGUI  &kp SPACE &mo FNUM  &kp LALT   &kp RET   &mo NAVIG &kp BSPC &kp RGUI    
                        >;
            sensor-bindings = <&inc_dec_kp C_VOL_UP C_VOL_DN>;
                };

// ▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄


                fnum_layer {
// ┌───────────────────────────────────────────────────────────┐
label= "FNUM"                                                  ;
// └───────────────────────────────────────────────────────────┘
/*            ┌─────────┬─────────┬─────────┬─────────┬─────────┐                    ┌─────────┬─────────┬─────────┬─────────┬─────────┐
              │   F1    │   F2    │   F3    │   F4    │   ESC   │                    │    `    │    7    │    8    │    9    │    0    │
    ┌─────────┼─────────┼─────────┼─────────┼─────────┼─────────┤                    ├─────────┼─────────┼─────────┼─────────┼─────────┼─────────┐
    │         │   F5    │   F6    │   F7    │   F8    │    [    │                    │    ]    │    4    │    5    │    6    │    =    │         │
    ├─────────┼─────────┼─────────┼─────────┼─────────┼─────────┤╭────────╮╭────────╮├─────────┼─────────┼─────────┼─────────┼─────────┼─────────┤
    │         │   F9    │   F10   │   F11   │   F12   │    /    ││        ││        ││    \    │    1    │    2    │    3    │    -    │         │
    └─────────┴─────────┴─────────┼─────────┼─────────┼─────────┼╰────────╯╰────────╯┼─────────┼─────────┼─────────┼─────────┴─────────┴─────────┘
                                  │         │         │         │         ││         │         │ DELETE  │         │  
                                  └─────────┴─────────┴─────────┴─────────┘└─────────┴─────────┴─────────┴─────────┘ */ 
 bindings = <
 //|          ╷         ╷         ╷         ╷         ╷         ╷         ╷╷         ╷         ╷         ╷         ╷         ╷         ╷
              &kp F1    &kp F2    &kp F3    &kp F4    &kp ESC                        &kp GRAVE &kp N7    &kp N8    &kp N9    &kp N0
    &trans    &kp F5    &kp F6    &kp F7    &kp F8    &kp LBKT                       &kp RBKT  &kp N4    &kp N5    &kp N6    &kp EQUAL &trans
    &trans    &kp F9    &kp F10   &kp F11   &kp F12   &kp FSLH  &trans     &trans    &kp BSLH  &kp N1    &kp N2    &kp N3    &kp MINUS &trans
                                  &trans    &trans    &trans    &trans     &trans    &trans &kp DELETE    &trans
                        >;
            sensor-bindings = <&inc_dec_kp C_VOL_UP C_VOL_DN>;
                };

// ▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄


                navig_layer {
// ┌───────────────────────────────────────────────────────────┐
label= "NAVIG"                                                 ;
// └───────────────────────────────────────────────────────────┘
/*           ┌─────────┬─────────┬─────────┬─────────┬─────────┐                    ┌─────────┬─────────┬─────────┬─────────┬─────────┐
             │         │         │         │         │         │                    │         │   HOME  │    Ü    │  END    │  PG UP  │
   ┌─────────┼─────────┼─────────┼─────────┼─────────┼─────────┤                    ├─────────┼─────────┼─────────┼─────────┼─────────┼─────────┐
   │         │         │         │         │         │    [    │                    │    ]    │   LEFT  │   UP    │  RIGHT  │ PG DOWN │         │
   ├─────────┼─────────┼─────────┼─────────┼─────────┼─────────┤╭────────╮╭────────╮├─────────┼─────────┼─────────┼─────────┼─────────┼─────────┤
   │         │         │         │         │         │    /    ││        ││        ││    \    │         │  DOWN   │         │         │         │
   └─────────┴─────────┴─────────┼─────────┼─────────┼─────────┼╰────────╯╰────────╯┼─────────┼─────────┼─────────┼─────────┴─────────┴─────────┘
                                 │ ADJUST  │         │   TAB   │         ││         │  INSERT │         │         │  
                                 └─────────┴─────────┴─────────┴─────────┘└─────────┴─────────┴─────────┴─────────┘ */ 
 bindings = <
 //╷         ╷         ╷         ╷         ╷         ╷         ╷         ╷╷         ╷         ╷         ╷         ╷         ╷         ╷         ╷
              &trans    &trans    &trans    &trans    &kp ESC                        &kp GRAVE &kp HOME  &trans    &kp END   &kp PG_UP     
    &kp RA(A) &trans    &kp RA(S) &trans    &trans    &kp LBKT                       &kp RBKT  &kp LEFT  &kp UP    &kp RIGHT &kp PG_DN &trans  
    &trans    &trans    &trans    &trans    &trans    &kp FSLH  &trans     &trans    &kp BSLH  &trans    &kp DOWN  &trans    &trans    &trans
                                  &trans    &kp TAB   &trans    &mo ADJUST &trans    &kp INSERT &trans    &trans  
                        >;
                sensor-bindings = <&inc_dec_kp C_VOL_UP C_VOL_DN>;
                };

// ▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄


                adjust_layer {
// ┌───────────────────────────────────────────────────────────┐
label= "ADJUST"                                                ;
